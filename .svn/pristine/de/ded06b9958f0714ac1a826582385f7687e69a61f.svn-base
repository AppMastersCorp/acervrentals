@model ClassLibrary1.VehicleFeature

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var ID = ViewBag.ID;
}

<section class="panel panel-info">
    <header class="panel-heading">
        <h3 class="panel-title">Vehicle Features</h3>
    </header>
    <div class="panel-body">


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="col-sm-6">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ID)
                <input type="hidden" name="hdnVehicleID" id="hdnVehicleID" value="@ID" />
          
                <div class="form-group">
                    @Html.LabelFor(model => model.VehicleID, "Vehicle")

                    @Html.DropDownList("VehicleID", null, htmlAttributes: new { @class = "form-control" ,@disabled= "disabled" })
                    @Html.ValidationMessageFor(model => model.VehicleID, "", new { @class = "text-danger" })

                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.FeatureID, "Feature")

                    @Html.DropDownList("FeatureID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.FeatureID, "", new { @class = "text-danger" })

                </div>



                <div class="form-group">

                    <input type="submit" value="Save" class="btn btn-primary" />
                    @Html.ActionLink("Back to List", "Index","VehicleFeatures", new { id = ID }, new { @class = "btn btn-primary" })

                </div>
            </div>
        }


    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
