@model IEnumerable<ClassLibrary1.VehicleRent>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<section class="panel panel-info">
    <header class="panel-heading">
        <h3 class="panel-title">Vehicle Rents</h3>
    </header>
    <div class="panel-body">

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table table-hover table-bordered">
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.RentTerm.Term)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Vehicle.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Amount)
                </th>
                <th>Action</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.RentTerm.Term)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Vehicle.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                    </td>
                </tr>
            }

        </table>
    </div>
</section>