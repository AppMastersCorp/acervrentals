@model VehicleSale.ViewModels.FoldersViewModel

@{
    ViewBag.Title = "AddFolder";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="panel panel-default" style="margin: 0px auto 30px auto; max-width: 100%; padding: 25px 20px 20px 20px; border: 1px solid #f5f5f5; background: #f5f5f5; border-top-right-radius: 0px;">
    <h4 class="panel-heading">Manage Media</h4>
    <div class="panel-body">
        <br />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()


            @Html.ValidationSummary(true)

            <div class="form-group">
                @Html.LabelFor(model => model.FolderName, new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.FolderName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.FolderName)
                </div>
                <div class="col-md-7">
                    <input type="submit" class="btn btn-primary" value="Add Folder" />
                </div>
            </div>

        }
    </div>
    </div>
