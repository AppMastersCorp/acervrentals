@model IEnumerable<ClassLibrary1.VehicleAmenty>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="panel panel-info">
    <header class="panel-heading">
        <h3 class="panel-title">Vehicle Amenties</h3>
    </header>
    <div class="panel-body">

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table table-bordered table-hover">
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.Vehicle)
                </th>

                <th>
                    Amenties
                </th>
                <th>Action </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Vehicle.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AmentiesMaster.Name)
                    </td>
                   
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                    </td>
                </tr>
            }

        </table>
    </div>
</section>
